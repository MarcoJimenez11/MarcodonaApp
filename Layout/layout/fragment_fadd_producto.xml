<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".FAddProducto"
                                             android:background="@drawable/fondito">

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:text="@string/clear_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="30sp" style="@android:style/Widget.Holo.Light.TextView"
            android:textColor="@android:color/holo_orange_light"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Bdelete" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/delete_producto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textSize="30sp" style="@android:style/Widget.Holo.Light.TextView"
            android:textColor="@android:color/holo_orange_light"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/Badd"/>
    <EditText
            android:layout_width="109dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/Tcodigo"
            android:hint="@string/codigo"
            android:background="@drawable/fondo_cod"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/Tnombre" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="center"/>
    <EditText
            android:layout_width="121dp"
            android:layout_height="60dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/Tprecio"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:hint="@string/precio"
            android:background="@drawable/fondo" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/Tnombre"
            android:textAlignment="center"/>
    <Button
            android:text="@string/add_btn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/Badd"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:background="@drawable/fondo_boton" android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/Tcodigo" android:layout_marginTop="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/Tnombre"
            android:hint="@string/nombre" android:background="@drawable/fondo"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp" app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:textAlignment="center"
    />
    <EditText
            android:layout_width="115dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/Tcodigo2"
            android:hint="@string/codigo"
            android:background="@drawable/fondo_cod" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:textAlignment="center"/>
    <Button
            android:text="@string/delete_btn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/Bdelete" app:layout_constraintStart_toEndOf="@+id/Tcodigo2"
            android:layout_marginStart="16dp"
            android:background="@drawable/fondo_boton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textAlignment="center" android:textSize="24sp"/>
    <TextView
            android:text="@string/add_producto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="30sp" style="@android:style/Widget.Holo.Light.TextView"
            android:textColor="@android:color/holo_orange_light"/>
    <Button
            android:text="@string/btn_clear_list"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/BClear" android:background="@drawable/fondo_boton"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="24sp"/>
</android.support.constraint.ConstraintLayout>
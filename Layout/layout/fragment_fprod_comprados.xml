<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".FProdComprados">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp" android:id="@+id/RVComprados"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/tvTotalDinero"
            app:layout_constraintTop_toBottomOf="@+id/textViewColumnas">
    </android.support.v7.widget.RecyclerView>
    <TextView
            android:text="Total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvTotalDinero" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textSize="30sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:background="@drawable/fondo_boton"
            android:textColor="@android:color/background_dark"
            android:textAlignment="textEnd" android:paddingRight="16dp" android:paddingLeft="16dp"/>
    <TextView
            android:text="@string/columnas_comprados"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewColumnas" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="24sp"
            android:textColor="@android:color/black" android:background="@color/design_default_color_primary"/>
</android.support.constraint.ConstraintLayout>